{
  "name": "cline/archive",
  "description": "A simplified Laravel media storage package focused on storage and URL generation without conversions",
  "license": "MIT",
  "keywords": [
    "php",
    "laravel",
    "media",
    "storage",
    "files",
    "uploads",
    "archive"
  ],
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "illuminate/contracts": "^10.0||^11.0||^12.0",
    "illuminate/database": "^10.0||^11.0||^12.0",
    "illuminate/filesystem": "^10.0||^11.0||^12.0",
    "illuminate/support": "^10.0||^11.0||^12.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.48.2",
    "orchestra/testbench": "^8.0|^9.0|^10.0",
    "pestphp/pest": "^4.1.1",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "symfony/var-dumper": "^6.0|^7.0",
    "cline/coding-standard": "^1.6.2"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\Archive\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Cline\\Archive\\ArchiveServiceProvider"
      ]
    }
  },
  "scripts": {
    "lint": "ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "pest --parallel --min=90 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=90 --coverage"
  }
}
